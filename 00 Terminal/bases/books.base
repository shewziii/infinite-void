properties:
  note.tags:
    displayName: tags
views:
  - type: cards
    name: Books
    filters:
      and:
        - file.tags.contains("BOOK")
        - file.folder != "99 Templates"
        - '!file.hasTag("book/highlights")'
    order:
      - file.name
      - author
    sort:
      - property: series
        direction: ASC
    image: note.banner
    imageFit: contain
    imageAspectRatio: 1.5
    cardSize: 140
